# $Id:$
# Startup script for tcos utils
#

DISPLAY_HOST=$(echo $DISPLAY| awk -F ":" '{print $1}')

if [ "x${DISPLAY_HOST}" != "x" ]; then

  # launch tcos-dbus-client
  tcos-dbus-client &

  # launch other tcos utils
  tcos-devices --daemon &
  tcos-devices --hidden &

  tcos-devices-ng &

  tcos-volume-manager &
fi

