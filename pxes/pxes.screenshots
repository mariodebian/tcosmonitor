#!/bin/sh


mkdir -p /var/www
mkdir -p /var/log

# start web server in 8081 port for screenshots

echo "8081 stream  tcp     nowait  root  /bin/httpd httpd -c /etc/httpd2.conf -h /var/www" >> /etc/inetd.conf

# restart inetd
killall inetd; inetd

# add "-ac" to X start command
sed -i s/'\/bin\/X'/'\/bin\/X -ac'/g /tmp/parsed/startx
